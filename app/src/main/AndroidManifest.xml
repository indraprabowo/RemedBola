<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indra.remedbola">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"

        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.indra.remedbola.view.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.indra.remedbola.view.matchesSearch.MatchesSearchActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.indra.remedbola.view.matchesDetail.MatchesDetailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.indra.remedbola.view.teamsDetail.TeamsDetailActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.indra.remedbola.view.playersDetail.PlayersDetailActivity"
            android:launchMode="singleTop" />
    </application>
</manifest>
